---
interface Props {
	title: string;
	description: string;
}

const { description , title } = Astro.props;
import Header from '../components/Header.astro';
import "@fontsource-variable/orbitron"
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/robot.svg" />
		<meta name="generator" content={Astro.generator} />


		<!-- Open Graph Tags -->
		<meta property="og:title" content="{title}" />
		<meta property="og:description" content="{description}" />
	
		<meta property="og:url" content="https://felipeflorezia.com/" />
		<meta property="og:type" content="website" />

		<title>{title}</title>
	</head>
	<body >
		<!-- Pantalla de "encendido" -->

		<div class="fixed inset-0 z-[-2] bg-[#000000] bg-[radial-gradient(#ffffff33_1px,#00091d_1px)] bg-[size:20px_20px]"></div>

		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
    color-scheme: light dark;
    --background-color: #0d112a ;
    --text-color: #e0e0e0;
    --accent-color: #00adb5;

    --border-color: #393e46;
}
html{
	scroll-behavior: smooth;
    font-family: "Orbitron", system-ui, sans-serif;
}


body {
    background:  var(--background-color);
    display: flex;
	flex-direction: column;
   
    color: var(--text-color);
	height: 100vh;
	
}

@media (prefers-reduced-motion: reduce){
	html{
		scroll-behavior: auto;
	}

}


a:hover {
    color:  #00adb5;
    transition: color 0.3s ease-in-out;
}
@keyframes expandLine {
  from {
    height: 0;
  }
  to {
    height: 100%;
  }
}

.line-animate:before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 2px;
  height: 100%;
  background-color: #00B4D8;
  animation: expandLine 1s ease-out forwards;
}




	
</style>
