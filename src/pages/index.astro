import YoutubeIcon from '../icons/YoutubeIcon.astro';
import MailIcon from '../icons/MailIcon.astro';
import Expirence from '../components/Expirence.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Briefcase from '../icons/briefcase.astro';
import Codigoicon from '../icons/codigoicon.astro';
import Projects from '../components/Projects.astro';
import Certificaciones from '../components/certificaciones.astro';
---

<Layout title=" Portafolio Felipe Florez - Desarrollador y Programador FullStack " 
 description='Contrata a Felipe Florez para crear tu aplicacion web. Desarrollador y programador web. Especializado en volver realidad una idea'

