	</SectionContainer>
	</main>
</Layout>

<style>
@keyframes bounceBall {
  0% {
    transform: translateY(-100%);
  }
  70% {
    transform: translateY(0);
  }
  85% {
    transform: translateY(-10px);
  }
  100% {
    transform: translateY(0);
  }
}

.animate-bounce-ball {
  animation: bounceBall 1.2s cubic-bezier(.75,.05,.28,.99);
}



</style>
